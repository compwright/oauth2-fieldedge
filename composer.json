{
    "name": "compwright/oauth2-fieldedge",
    "description": "FieldEdge OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonathon Hill",
            "email": "jonathon@compwright.com",
            "homepage": "https://compwright.com"
        }
    ],
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "field",
        "edge",
        "provider"
    ],
    "bin": [
        "bin/fieldedge-client-credentials"
    ],
    "require": {
        "php": "^7.4 || ^8",
        "league/oauth2-client": "^2.5",
        "psr/http-message": "^1.0",
        "lcobucci/jwt": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Compwright\\OAuth2_Fieldedge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Compwright\\OAuth2_Fieldedge\\": "test/"
        }
    }
}
